{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-debugger": "warn",
        "indent": ["error", 4, { "ignoredNodes": ["ConditionalExpression *"] }], // Allow prettier to style conditionals
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "react/prop-types": 0,
        "no-console": "warn",
        "no-unused-vars": "warn"
    }
}